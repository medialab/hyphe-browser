
@import '../../css/helpers.styl'

input
    font-family: var(--font-mono)

.spinner-container {
    display: flex
    align-items: center
    justify-content: center
    height: 100%
    background: var(--color-white)
}

.mode-btn
    button()
    font-size: 13px
    background: var(--color-grey)
    font-family: var(--font-mont)
    padding: 10px
    flexCenter()
    width: calc(100% - 5px)
    height: 100%
    @media (max-width: $tablet-break-point)
        height: 30px
    &:last-of-type
        margin-right: 0
    &.is-active
        button('active')
        font-family: var(--font-mont)
        margin-right: 0
        padding: 10px
        cursor: default
    &[disabled]
        opacity: 0.5
        pointer-events: none
    &:not(.is-active):hover
        background: var(--color-grey-darker)

.help-pin
    padding-left: .2em

.browser-layout
    fix()
    stretch(column)
    background: var(--color-white)
    .browser-main-container
        flex: 1
        stretch(row)
        overflow: hidden
        @media (max-width: $narrow-break-point)
          flex-direction: column
        .browser-column.browser-aside-column
            width: 416px
            max-height: 100%
            padding: 0
            box-sizing: border-box
            padding-right: 0
            background: var(--color-grey-light)
            @media (max-width: $tablet-break-point)
                width: 300px
            @media (max-width: $narrow-break-point)
                width: 100%
                max-height: 50%
                min-height: 50%
                overflow: hidden
                stretch(column)
                order: 2
            .aside-header.switch-mode-container
                // max-height: 35px
                stretch(row)
                justify-content: space-between
                list-style: none
                padding: 10px
                padding-left: 20px
                padding-right: 20px
                padding-bottom: 0
                margin: 0
                // height: 35px
                background: var(--color-grey-light)

                li
                    flex: 1
                @media (max-width: $tablet-break-point)
                    flex-direction: column
                    min-height: 80px
                    li
                        margin-bottom: 5px
                    .mode-btn
                        padding-left: 30px
                        padding-top: 7px;
            .aside-content
                flex: 1
                max-height: calc(100% - 62px)
                @media (max-width: $tablet-break-point)
                    max-height: calc(100% - 90px)
                height: 100%
                overflow: hidden
                stretch(column)
                .edition-cartel:last-of-type
                    margin-bottom: 80px
                .list-layout
                    height: 100%
                    max-height: calc(100% - 30px)
                    @media (max-width: $tablet-break-point)
                        max-height: calc(100% - 70px)
                    .edition-cartel:first-of-type
                        margin-bottom: 0
                        margin-top: 20px
                        .edition-cartel-content
                            padding-top: 0
                @media (max-width: $narrow-break-point)
                  max-height: calc(50vh - 20px)
                  .list-layout
                    overflow-y: auto
                    max-height: 100%
                    .webentities-list-wrapper
                      min-height: unset
                      overflow: visible
                      .webentities-list
                        overflow: visible
                      .webentities-list-header
                        min-height: 40px
                      .webentities-list-container
                        overflow: visible
                      .actions-container
                        min-height: 50px
        .browser-column.browser-main-column
            flex: 1
            stretch(column)
            width: calc(100% - 416px)
            @media (max-width: $tablet-break-point)
                width: calc(100% - 300px)
            @media (max-width: $narrow-break-point)
                width: 100%
                max-height: 50%
                min-height: 50%
    .hyphe-view-container
        flex: 1
        webview
            height: 100%
    .switch-mode-title
        stretch(row)
        align-items: center

    .current-stack-indicator
        width: 16px
        height: 16px
        font-size: 7px
        color: var(--color-white)
        border-radius: 50%
        margin-right: 5px
        position: relative
        display: inline-block
        display: flex
        align-items: center
        justify-content: center
        padding: 0
        &.IN
            background: var(--color-corpus-in)
        &.OUT
            background: var(--color-corpus-out)
        &.DISCOVERED
            background: var(--color-corpus-discovered)
        &.UNDECIDED
            background: var(--color-corpus-undecided)
        i
            padding-left: 0
            position: relative
            top: -1px
