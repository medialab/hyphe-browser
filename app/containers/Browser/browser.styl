.browser-window {
  display: flex;
  flex-direction: column;

  *, *::after, *::before {
    -webkit-user-select: none;
    -webkit-user-drag: none;
    -webkit-app-region: no-drag;
    cursor: default;
  }

  input {
    background: var(--color-white);
    border-radius: var(--radius);
    border: 1px solid var(--color-white);
    font-family: var(--font-pt);
    font-size: 12px;
    line-height: 1.6;
    padding: 10px;
    width: 100%;
  }

  select:focus,
  input:focus {
    outline: none !important;
    border: 1px solid var(--color-black) !important;
    box-shadow: none !important;
  }

  .spinner-container {
    margin: auto;
  }

  .global-overlay {
    background: var(--color-black);
    bottom: 0;
    left: 0;
    margin: auto;
    opacity: 0.5;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 998;
  }

  .over-overlay.adjusting {
    z-index: 999;
    position: relative; // should be overriden carefully
  }
}
