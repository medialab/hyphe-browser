.browser-stack {
  display: flex;
  padding: 22px 1em 1em 30px;
  z-index: 90;

  @media (max-width: 1024px) {
    padding-left: 25px;
  }

  // left side

  .browser-stack-wes {
    display: flex;
    width: 400px;

    @media (max-width: 1024px) {
      width: 296px;
    }

    // prev, next
    .btn {
      font-size: 10px;
      padding: 6px;
      padding-top: 0px;

      span {
        background: var(--color-black);
        border-radius: 50%;
        padding: 4px;
        &::before {
          color: var(--color-white);
          font-weight: bold;
        }
      }
    }

    .btn[disabled] {
      span {
        background: var(--color-grey);
      }
    }
  }

  .browser-stack-wes-selector {
    width: 316px;
  }

  progress,
  progress::-webkit-progress-bar {
    background: var(--color-grey);
    display: block !important;
    height: 4px;
    margin-top: .5em;
    width: 100%;
  }

  progress::-webkit-progress-value {
    background: var(--color-black);
  }

  // right colored buttons

  .fillers {
    display: flex;
    margin-left: 24px;
  }

  .filler {
    background: none;
    border: none;
    border-radius: var(--radius);
    padding: 0 10px;
    position: relative;
    text-align: left;

    @media (max-width: 1124px) {
      padding: 0 .6em;
    }

    &:focus {
      outline: none !important;
    }

    // separators

    &::after {
      background: var(--color-black);
      content: ''
      height: 24px;
      position: absolute;
      right: 0;
      top: 0;
      width: 1px;
    }

    &:last-child::after {
      display: none;
    }

    // content

    .filler-name {
      cursor: pointer;
      font-family: var(--font-mont);
      font-size: 13px;
      font-weight: bold;
      padding: 0 12px;
      margin-top: 0 12px;
      text-transform: uppercase;

      background: var(--color-grey);
      border-radius: var(--radius);

      @media (max-width: 1124px) {
        font-size: 12px;
      }
    }

    .filler-counter {
      cursor: pointer;
      font-family: var(--font-pt);
      font-size: 12px;
      font-weight: bold;
      padding-left: 12px;
      padding-top: 2px;
    }

    &:hover {
      .filler-name {
        background: var(--color-black);
        color: var(--color-white);
      }
    }

    // selected

    &.selected {
      .filler-name {
        background: var(--color-black) !important;
        color: var(--color-white) !important;
      }

      .filler-counter {
        opacity: 1;
      }
    }

    // disabled

    &[disabled]:hover {
      background: none;

      .filler-name, .filler-counter {
        cursor: default;
      }

      .filler-name {
        background: var(--color-grey);
        color: var(--color-black);
      }
    }
  }

  // see colors.styl

  .filler-UNDECIDED .filler-counter {
    color: var(--color-corpus-undecided);
  }

  .filler-IN .filler-counter,
  .filler-IN_UNTAGGED .filler-counter,
  .filler-IN_UNCRAWLED .filler-counter {
    color: var(--color-corpus-in);
  }

  .filler-OUT .filler-counter {
    color: var(--color-corpus-out);
  }

  .filler-DISCOVERED .filler-counter {
    color: var(--color-corpus-discovered);
  }
}


