@import '../../css/helpers.styl'

.login-container
  max-height: 100%
  display: flex
  flex-direction: column

.login
  abs()
  flexCenter()
  .config-container
    background: var(--color-grey)
    border-radius: var(--radius)
    transition: background 0.2s linear
    padding: 1em
    max-width: 350px
    min-width: 350px
    flex-grow: 1
    flex-shrink: 1
    overflow-y: auto
    overflow-x: hidden
    &.large
      max-width: 600px
      min-width: 600px
    .section-header
      margin-top: 0
      margin-bottom: 10px

  .corpora-list-header
    stretch(row)
    align-items: center
    .search-container
      position: relative
      flex: 1
      input
        input()
        width: 100%
      .icon
        position: absolute
        top: 10px
        right: 10px

    .order-container
      position: relative
      stretch(row)
      .order-button
        buttonIcon()
      .order-options
        dropdownOptions()

    .order-container.is-active .order-button
      background: var(--color-black)
      color: var(--color-white)

  .corpora-list-container
    border-top: 1px solid var(--color-grey-dark)
    margin-top: 20px
    padding-top: 20px

  .installing-server-container
    margin-top: 20px


  .cards-list
    padding-right: 0
    padding-left: 2px

  .corpus-card
    background: var(--color-white)
    padding: 10px
    margin-bottom: 10px
    cursor: pointer
    margin-right: 10px
    .corpus-name
    .corpus-webentities
      margin: 0
      margin-bottom: 5px
      font-family: var(--font-pt)
      font-size: 14px
      word-break: break-all
    .corpus-webentities
      font-size: 12px
    .corpus-dates
      white-space: nowrap
      text-overflow: ellipsis
      font-size: 10px
      opacity: 0.7
    &:hover
      background: var(--color-grey-light)
    .info-icon
      font-size: 10px
      margin-left: 5px
      display: inline

  .corpus-form
    .options-wrapper
      transition: all .5s ease
      border: 1px solid transparent
      margin: 0
      overflow:hidden
      max-height: 40px
      &.active
        border: 1px solid lightgrey
        padding: 10px
        padding-bottom: 0
        border-radius: 5px
        margin-bottom: 10px
        max-height: 100vh

  .server-sumup-container
    .server-sumup-label,
    .server-sumup-value
      font-size: 14px
    .server-sumup-label
      font-weight: bold
      margin: 15px 0 5px
    .server-sumup-value
      margin: 0
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap

.form-group
  stretch(column)
  margin-bottom: 15px
  label
    padding: 5px 0
    font-size: 12px
  input
    input()
  &.horizontal
    stretch(row)
    align-items: center
    margin-bottom: 10px
    input.narrow
      width: 80px
      margin-right: 10px
  &.minified
      margin-bottom: 5px
  &.error .error-message
    margin-left: 10px
    color: var(--color-red)
