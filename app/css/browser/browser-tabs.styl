.browser-tabs {
  display: flex;
  flex-direction: column;
  flex: 1;

  > .browser-tab-labels {
    overflow: hidden;
  }

  .browser-tab-labels,
  .browser-tab-labels-edge,
  .browser-tab-labels-main {
    display: flex;
  }

  .browser-tab-labels-edge {
    flex-shrink: 1;
    flex-grow: 0;
    z-index: 90;
  }

  .browser-tab-labels-main {
    flex: 1;
    // to display the create new tab button
    padding-right: 30px;
    max-width: 97%;
    z-index: 80;
  }

}

// button
.browser-tab-new {
  margin-left: .5em;
  position: relative;

  &::after {
    background: var(--color-grey);
    content: '';
    display: block;
    height: 60%;
    position: absolute;
    top: 7px;
    transform: skewX(20deg);
    width: 20px;
    z-index: -1;
  }

  &:hover::after {
    background: var(--color-black);
  }
}

