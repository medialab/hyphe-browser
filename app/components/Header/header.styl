.hyphe-header {
  background: var(--color-black);
  color: var(--color-white);
  font-family: var(--font-pt);
  font-size: 14px;
  font-weight: bold;
  padding: 4px;
  text-align: center;

  .header-left {
    width: 150px;
    float: left;
  }

  .header-right {
    width: 150px;
    float: right;
  }
  
  .disconnection {
    color: var(--color-white);
    display: block;
    float: right;
    padding-top: 2px;
    text-decoration: none;
    vertical-align: middle;
    cursor: pointer;
    z-index: 1000;

    span {
      cursor: pointer;
    }
  }
}

