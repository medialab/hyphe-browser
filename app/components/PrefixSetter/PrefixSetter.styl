
.prefix-setter
    display: inline-block
    overflow: auto
    padding-right: 15px
    max-width: calc(100% - 15px)
    .parts-container
        padding: 0
        margin: 0

        overflow-x: auto
        overflow-y: hidden
        white-space: nowrap
        position: relative
        width: 100%
        margin-bottom: 7px
        margin-right: 15px

        .part
            display: inline-block
            list-style-type: none
            padding: 10px
            user-select: none
            background: var(--color-grey)
        .part.active
            background: var(--color-blue)
            color: rgb(230, 241, 248)
        .part:not(.editable)
            opacity: .8
            cursor: default
        .part.editable
            cursor: pointer
        .editable-wrapper
            position: absolute
            top: 0
            height: 100%
            pointer-events: none
        .slider
            position: absolute
            left: 0
            top: 0
            height: 100%
            background: var(--color-blue-light)
            width: 5px
            cursor: move
        .slider-handle
            cursor: move
            pointer-events: auto
            position: absolute
            top: calc(100% - 30px)
            left: -7.5px
            background: var(--color-blue)
            border: 3px solid var(--color-blue-light)
            box-sizing: border-box
            width: 20px
            height: 20px
            border-radius: 50%
