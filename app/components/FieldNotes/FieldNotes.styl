
@import '../../css/helpers.styl'

.field-notes-container
    text-align: left;
    padding: 10px
    button
        outline: none
    form
        display: flex
        flex-flow: column nowrap
    textarea
        input()
        max-width: 100%;
        overflow: auto;
        text-overflow: ellipsis;
        outline: none
        border: none
        resize: none
        min-height: 50px
        font-family: var(--font-mono)
        border: 1px solid var(--color-grey)
    textarea:focus
        inputFocus()
    textarea::placeholder
        inputPlaceholder()
    .field-note
        margin-bottom: 10px
        font-size: 12px
        stretch(row)
        align-items: flex-start
        padding: 10px
        background: var(--color-grey)
        border-radius: var(--radius)
        .field-note-content
            flex: 1
            padding-top: 10px
            .note-block
                margin-bottom: 10px
    .add-button
        button('active')
    .cancel-button
        button('active')
        background: var(--color-red)
    .add-button
    .cancel-button
        width: 100%
        margin-left: 0
        margin-right: 0
        margin-bottom: 10px
        border: none
        cursor: pointer
        padding: 10px
    
    .add-button[disabled],
    .cancel-button[disabled]
        background: var(--color-blue-light)
        cursor: default

    .actions-container
        list-style: none
        padding: 0
        margin: 0
        margin-top: 10px
        max-width: 100%
        stretch(row)
        li
            flex: 1
        li:not(:first-of-type)
            margin-left: 5px

