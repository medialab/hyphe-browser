

.entry-tab-content
    display: flex
    justify-content: center
    overflow-y: auto
    position: relative
    background: white
    .content-wrapper
        max-width: 600px
        padding: 20px
    .starter-container
        background: var(--color-white)
        padding: 20px
        border-radius: var(--radius)
    .actions-container
        
        list-style: none
        display: flex
        flex-flow: row nowrap
        padding: 0
        justify-content: space-between
        padding-top: 20px
        padding-bottom: 20px
        .action-container
            flex: 1
            max-width: 30%
            min-width: 30%
            height: 120px
            button
                background: white
                font-family: var(--font-mono)
                width: 100%
                height: 100%
                cursor: pointer
                border-radius : var(--radius)
                border 1px solid var(--color-grey)
                display: flex
                flex-direction: column
                align-items: center
                justify-content: flex-start
                padding-top: 20px
                h3
                    font-weight: bold
                    font-size: 18px
                    margin-bottom: 0
                    padding-bottom: 0
                h4
                    margin-top: 0
        .action-container.is-active
            button
                color: var(--color-white)
                background: var(--color-blue)
        .action-container.is-disabled
            opacity: .5
            pointer-events: none
    .browser-search
        list-style: none
        padding: 0
        display: flex
        flex-flow: column nowrap
        margin-top: 20px
        margin-bottom: 20px
        select 
            font-family: var(--font-pt)
            border: none 
            font-size: 16px
            outline: none
        .main
            flex: 1
            margin-top: 10px
            input
                padding: 10px
                background: white
                border-radius: var(--radius)
                border: 1px solid var(--color-grey)
                width: 100%
                font-size: 16px
                max-width: 100%
                box-sizing: border-box
                outline: none
                &:focus
                    border: 1px solid var(--color-grey-dark)
                    
    ol
        li
            margin-bottom: 10px