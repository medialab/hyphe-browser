


.edition-cartel
    margin-bottom: 10px
    position: relative
    .edition-cartel-header
        text-align: center
        h4
            cursor: pointer
            background: var(--color-white)
            padding: 10px 
            display: inline
            font-size: 14px
            font-weight: normal
            .arrow-container
                padding-right: 10px
            .title
                min-width: 150px
                display: inline-block
    .edition-cartel-header:before
        position: absolute
        left: 10px
        top: 10px
        width: calc(100% - 20px)
        height: calc(100% - 20px)
        content:""
        border: 1px solid var(--color-grey)
        z-index: -1
        border-radius: 10px
    .edition-cartel-content
        padding: 20px
        padding-top: 10px
        overflow: hidden
        max-height: 100vh
        transition: all .5s ease
        opacity: 1
        .input 
            width: 100%
            border: 1px solid var(--color-grey)
            border-radius: 5px
            padding: 10px
            box-sizing: border-box
            outline: none
        .input:focus
            border: 1px solid var(--color-grey-dark)

.edition-cartel:not(.is-open)
    .edition-cartel-header:before
        border-bottom: none
    .edition-cartel-content
        max-height: 0
        padding-top: 0
        padding-bottom: 0
        opacity: 0

.edition-cartel.is-always-open
    .edition-cartel-header h4
        cursor: default
    .arrow-container
        display: none