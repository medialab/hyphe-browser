
@import '../helpers.styl'

.research-notes-container
    text-align: left;
    padding: 10px
    form
        display: flex
        flex-flow: column nowrap
    textarea
        max-width: 100%;
        overflow: auto;
        text-overflow: ellipsis;
        outline: none
        border: none
        resize: none
        border-radius: var(--radius)
        padding: 10px
        min-height: 50px
        font-size: 12px
        font-family: var(--font-mono)
        border: 1px solid var(--color-grey)
        color: var(--color-black)
    textarea:focus
        border: 1px solid var(--color-grey-dark)
    textarea::placeholder
        color: var(--color-grey-dark)
    .research-note
        margin-bottom: 10px
        font-size: 12px
        stretch(row)
        align-items: flex-start
        padding: 10px
        background: var(--color-grey)
        border-radius: var(--radius)
        .research-note-content
            flex: 1
            padding-top: 10px
            .note-block
                margin-bottom: 10px
        &:last-of-type
            margin-bottom: 0
    .add-button
    .cancel-button
        width: 100%
        margin-left: 0
        margin-right: 0
        margin-bottom: 10px
        border: none
        font-family: var(--font-pt)
        cursor: pointer
        background: var(--color-blue)
        color: white
        padding: 10px
        border-radius: var(--radius)
    .cancel-button
        background: var(--color-red)
    .add-button[disabled],
    .cancel-button[disabled]
        background: var(--color-blue-light)
        cursor: default

    .actions-container
        list-style: none
        padding: 0
        margin: 0
        margin-top: 10px
        max-width: 100%
        stretch(row)
        li
            flex: 1
        li:not(:first-of-type)
            margin-left: 5px

