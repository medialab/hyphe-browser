@import '../helpers.styl'

.linked-entities
    .list-toggle
        stretch(row)
        padding: 10px
        padding-left: 0
        padding-right: 0
        button 
            background: var(--color-grey)
            outline: none
            width: 100%
        button.is-selected
            background: var(--color-blue)
            color: white
        button:first-of-type
            margin-right: 5px
    .download
        padding-top: 10px
        padding-bottom: 10px
        .btn
            background: var(--color-grey)
            padding: 10px
            width: 100%
    .entity-card
        margin-left: 5px
        margin-bottom: 5px
    .actions-container
        list-style: none
        padding: 0
        stretch(row)
        li
            flex: 1
        .btn
            width: 100%
            font-family: var(--font-pt)
            border: none 
            padding: 10px
            color: var(--color-white)
            height: 40px
            display: flex
            align-items: center
            justify-content: center
        .confirm-btn
            background: var(--color-blue)
        .cancel-btn
            background: var(--color-red)
        li:first-of-type
            padding-right: 5px