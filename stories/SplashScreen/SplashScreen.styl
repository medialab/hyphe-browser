
@import '../helpers.styl'

.splash-screen
    .splash-screen-container
        flexCenter(column)
        abs()
        background: white
    .loading-container
        font-size: 20px
        span
            animation-name: blink;
            animation-duration: 1.4s;
            animation-iteration-count: infinite;
            animation-fill-mode: both;
        span:nth-child(2)
            animation-delay: .2s
        span:nth-child(3)
            animation-delay: .4s


@keyframes blink {
    0% {
      opacity: .1;
    }
    20% {
      opacity: 1;
    }
    100% {
      opacity: .1;
    }
}
