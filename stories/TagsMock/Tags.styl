button()
    border: none
    background: white
    // line-height: 34px;
    font-family: var(--font-pt)
    // text-transform: uppercase
    cursor: pointer
    padding: 5px
    border-radius: 5px

input()
    color: #aaa;
    // line-height: 17px;
    max-width: 100%;
    // overflow: auto;
    text-overflow: ellipsis;
    outline: none
    border: none
    resize: none
    border-radius: 5px
    padding: 5px
    font-size: 12px
    

.tags-container
    text-align: left
    padding: 10px
    padding-top: 0
    .no-categories-text
        font-style: italic
        font-size: 14px
        color: var(--color-grey-dark)
        text-align: center
        padding: 10px
    .categories-container
        padding-bottom: 10px
    .add-category-container
        display: flex
        flex-flow: row nowrap
        justify-content: stretch
        // border-top: 1px solid #cccecd
        padding-top: 5px
        .add-category-input
            flex: 1
            input()
            max-width: calc(35% - 5px)
            text-align: right
            border: 1px solid var(--color-grey)
            padding: 10px

        .add-category-input::placeholder
            color: var(--color-grey-dark)
        .add-category-input:focus
            border: 1px solid var(--color-grey-dark)
        button
            flex: 1
            button()
            margin-left: 5px
            background: var(--color-blue)
            color: white
            .help-pin::after
                text-transform: lowercase
        button[disabled]
            background: var(--color-blue-light)
            // color: var(--color-grey-dark)
            cursor: default
    .categories-list
        padding: 0
        padding-right: 5px
    .category-item-container
        list-style-type: none
        display: flex
        flex-flow: row nowrap
        justify-content: stretch
        margin-bottom: 5px
        align-items: center
        max-width: 100%
        box-sizing: content-box
        .category-name
            text-align: right
            flex: 1
            padding-right: 10px
            font-size: 12px
            max-width: 35%
            min-width: 35%
        .category-input
            flex: 1
            max-width: 65%
            min-width: 65%
    .Select
        font-size: 12px
